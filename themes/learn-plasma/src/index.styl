
@import '../../../node_modules/bootstrap/dist/css/bootstrap.min.css'
@import '../../../node_modules/@fortawesome/fontawesome-free/css/all.min.css'

// Fonts
// Open Sans
@font-face
  font-family 'Open Sans'
  font-style sans-serif
  font-weight 400
  src url(webfonts/OpenSans-Regular.ttf)
@font-face
  font-family 'Open Sans'
  font-style sans-serif
  font-weight 300
  src url(webfonts/OpenSans-Light.ttf)
@font-face
  font-family 'Open Sans'
  font-style sans-serif
  font-weight 600
  src url(webfonts/OpenSans-SemiBold.ttf)
@font-face
  font-family 'Open Sans'
  font-style sans-serif
  font-weight 700
  src url(webfonts/OpenSans-Bold.ttf)
// Barlow
@font-face
  font-family 'Barlow'
  font-style sans-serif
  font-weight 100
  src url(webfonts/Barlow-Thin.ttf)
@font-face
  font-family 'Barlow'
  font-style sans-serif
  font-weight 400
  src url(webfonts/Barlow-Regular.ttf)
@font-face
  font-family 'Barlow'
  font-style sans-serif
  font-weight 500
  src url(webfonts/Barlow-Medium.ttf)

// General
body
  font-family 'Open Sans', sans-serif
  font-weight 300
  background-color #FFFFFF
  color: #757575
  margin 0
  line-height 1.9
*, *::before, *::after
  -webkit-box-sizing border-box
  box-sizing border-box
article, aside, figcaption, figure, footer, header, hgroup, main, nav, section
  display block
img
  vertical-align middle
  border-style none
  max-width 100%
  height auto
h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
  margin-bottom .5rem
  font-family 'Barlow', sans-serif
  font-weight 400
  line-height 1.5
  color #323d47
  letter-spacing .5px
h1
  font-weight 100
h1, .h1
  font-size 2.57813rem
default:focus
  color #5c5c5c !important

// Links
a:hover, a:focus
  color #50a1ff
  text-decoration none
  outline 0

// Button
.btn
  display inline-block
  font-weight 600
  text-align center
  white-space nowrap
  vertical-align middle
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  border 1px solid transparent
  padding .375rem .75rem
  font-size .9375rem
  line-height 1.9
  border-radius .25rem
  letter-spacing: 1.7px;
  text-transform: uppercase;
  -webkit-transition color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, -webkit-box-shadow .15s ease-in-out
  transition color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, -webkit-box-shadow .15s ease-in-out
  transition color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out
  transition color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out, -webkit-box-shadow .15s ease-in-out
.btn:not(:disabled):not(.disabled)
  cursor pointer
.btn:hover, .btn:focus
  text-decoration none
.btn-sm,
.btn-group-sm > .btn,
.input-group-sm > .input-group-prepend > .btn,
.input-group-sm > .input-group-append > .btn
  line-height 1.5
  border-radius .125rem
  padding-top 8px
  padding-right 20px
  padding-bottom 6px
  padding-left 20px
  font-size 11px
.btn-lg,
.btn-group-lg > .btn,
.input-group-lg > .input-group-prepend > .btn,
.input-group-lg > .input-group-append > .btn
  line-height 2.2
  padding 7px 32px 6px
  font-size 12px
.btn-round
  border-radius 10rem
.btn-success
  color #fff
  background-color #3cd458
  border-color #3cd458
.btn-success:focus,
.btn-success.focus
  color #fff
  -webkit-box-shadow 0 0 0 0 rgba(60,212,88,0.5)
  box-shadow 0 0 0 0 rgba(60,212,88,0.5)
.btn-info
  color #fff
  background-color #926dde
  border-color #926dde
.btn-info:focus,
.btn-info.focus
  color #fff
  -webkit-box-shadow 0 0 0 0 rgba(146,109,222,0.5)
  box-shadow 0 0 0 0 rgba(146,109,222,0.5)

// Navbar
.navbar
  position relative
  display -webkit-box
  display flex
  flex-wrap wrap
  -webkit-box-align center
  align-items center
  -webkit-box-pack justify
  justify-content space-between
  padding .5rem 1rem
.navbar
  position absolute
  top 10px
  left 0
  right 0
  z-index 1000
  -webkit-transition background-color .3s ease-out, -webkit-transform .3s ease-out
  transition background-color .3s ease-out, -webkit-transform .3s ease-out
  transition transform .3s ease-out, background-color .3s ease-out
  transition transform .3s ease-out, background-color .3s ease-out, -webkit-transform .3s ease-out
  padding-top 0
  padding-bottom 0
  min-height 56px
.navbar-mobile
  display -webkit-box
  display flex
  -webkit-box-align center
  align-items center
  width 100%
.nav-navbar > .nav-item > .nav-link,
.nav-navbar > .nav-link
  line-height 56px
  padding-top 0
  padding-bottom 0
.navbar-dark .navbar-divider,
.navbar-stick-dark.stick .navbar-divider 
  background-color rgba(117,117,117,0.8)
.navbar-divider
  display inline-block
  height 16px
  width 1px
  background-color #fff
  margin 0 1rem
  opacity .15
.nav
  display flex
  flex-wrap wrap
  padding-left 0
  margin-bottom 0
  list-style: none
.nav-navbar
  position relative
.nav-navbar .nav-link
  font-weight 600
  text-transform uppercase
  letter-spacing 1px
  font-size .87em
  word-spacing 2px
  padding-left 1.125rem
  padding-right 1.125rem
.navbar-dark .nav-navbar > .nav-item > .nav-link,
.navbar-dark .nav-navbar > .nav-link,
.navbar-stick-dark.stick .nav-navbar > .nav-item > .nav-link,
.navbar-stick-dark.stick .nav-navbar > .nav-link
  color rgba(117,117,117,0.8)
.navbar > .container,
.navbar > .container-fluid
  display -webkit-box
  display flex
  flex-wrap wrap
  -webkit-box-align center
  align-items center
  -webkit-box-pack justify
  justify-content space-between
@media (min-width: 992px)
  .navbar-expand-lg > .container,
  .navbar-expand-lg > .container-fluid
    flex-wrap: nowrap
  .navbar-expand-lg
    -webkit-box-orient horizontal
    -webkit-box-direction normal
    flex-flow row nowrap
    -webkit-box-pack start
    justify-content flex-start
.navbar-dark .logo-light,
.navbar-stick-dark.stick .logo-light
  display none
.navbar-dark .logo-dark,
.navbar-stick-dark.stick .logo-dark
  display: inline-block
.navbar-dark .navbar-brand
  color #fff
.navbar-brand
  display -webkit-inline-box
  display inline-flex
  padding-top 0
  padding-bottom 0
  margin-right 1rem
  font-size 1.0625rem
  line-height inherit
  white-space nowrap
  -webkit-box-align center
  align-items center
.navbar-brand img
  vertical-align baseline
.navbar-left
  display -webkit-box
  display flex
  -webkit-box-align center
  align-items center

// Header
#main-header
  background-image linear-gradient(135deg, #f9f7ff 0%, #fff 50%, #f6f3ff 100%)
.header
  position relative
  background-position center
  -webkit-background-size cover
  background-size cover
  background-repeat no-repeat
  padding-top 146px
  padding-bottom 90px
.section-header
  text-align center
  max-width 70%
  margin 0 auto 70px
  small
    display inline-block
    font-size .6875rem
    font-weight 600
    text-transform uppercase
    letter-spacing .75px
    margin-bottom 1.5rem
    word-spacing 2px
    color rgba(153,153,153,0.6)
  hr
    width 50px
    margin-top 2.5rem
    margin-bottom 1.5rem

// Section
.section
  width 100%
  padding-top 5rem
  padding-bottom 5rem
  position relative
  border-bottom 0
  background-position center center
  -webkit-background-size cover
  background-size cover
  background-repeat no-repeat
.bg-gray
  background-color #fafbfb

// Footer
.footer
  background-color #fcfdfe
  font-size .9375rem
  border-top 1px solid rgba(241,242,243,0.5)
  padding 1.25rem 0
  position relative
  z-index 910
.footer a
  color rgba(0,0,0,0.6)
.nav-link
  display block
  padding .5rem 1rem
  color #757575
  font-weight 400

// Row
.row.gap-y
  margin-top -15px
  margin-bottom -15px
.row.gap-y > .col,
.row.gap-y > [class*="col-"]
  padding-top 15px
  padding-bottom 15px

// Text
.lead
  font-weight 300
  font-size 1.125rem
.lead-7
  font-size 3.04688rem !important
.text-default
  color #757575 !important
.text-lighter
  color #bfc5ca !important

// Margin
.mt-5, .my-5
  margin-top 1.5rem !important
.mb-8, .my-8
  margin-bottom 5rem !important

// Padding
.pb-8, .py-8
  padding-bottom 5rem !important
.pt-8, .py-8
  padding-top 5rem !important
.pl-6, .px-6
  padding-left 2rem !important
.pr-6, .px-6
  padding-right 2rem !important

// Border
.border
  border 1px solid #f1f2f3 !important

// Font Weight
.fw-500,
.font-weight-500
  font-weight 500 !important

// Shadow
.shadow-6,
.hover-shadow-6:hover
  -webkit-box-shadow 0 0 36px rgba(0, 0, 0, 0.06)
  box-shadow 0 0 36px rgba(0, 0, 0, 0.06)
.shadow-9,
.hover-shadow-9:hover
  -webkit-box-shadow 0 0 74px rgba(0, 0, 0, 0.06)
  box-shadow 0 0 74px rgba(0, 0, 0, 0.06)

// Card
.card
  border 0
  -webkit-transition .5s
  transition .5s

// RSS
#rss-container
  display flex
  flex-flow row nowrap
  justify-content center
